generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model user {
  id       String   @id @default(uuid())
  email    String   @unique
  password String
}

model Progetto {
  id          String   @id @default(uuid())
  titolo      String
  descrizione String
  immagine    String
  visibile    Boolean  @default(false)
  inEvidenza  Boolean  @default(false)
  createdAt   DateTime @default(now())
  link        String?
}
